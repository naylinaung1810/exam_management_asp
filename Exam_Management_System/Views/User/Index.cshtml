        })
        $('#stu_religion').change(function () {
            if ($('#stu_religion').val() == 'other') {
                $('#student_religion').html('<input type="text" class="form-control" name="Religion" />');
            }
        })
        $('#fath_religion').change(function () {
            if ($('#fath_religion').val() == 'other') {
                $('#father_religion').html('<input type="text" class="form-control" name="Religion" />');
            }
        })
        $('#moth_religion').change(function () {
            if ($('#moth_religion').val() == 'other') {
                $('#mother_religion').html('<input type="text" class="form-control" name="Religion" />');
            }
        })
        $('#stu_nationality').change(function () {
            if ($('#stu_nationality').val() == 'other') {
                $('#student_nationality').html('<input type="text" class="form-control" name="Nationality" />');
            }
        })
        $('#fath_nationality').change(function () {
            if ($('#fath_nationality').val() == 'other') {
                $('#father_nationality').html('<input type="text" class="form-control" name="Nationality" />');
            }
        })
        $('#moth_nationality').change(function () {
            if ($('#moth_nationality').val() == 'other') {
                $('#mother_nationality').html('<input type="text" class="form-control" name="Nationality" />');
            }
        })
        ///////////////////////////////////////

        $.ajax({
            url: "/Student/GetAcademic",
            type: "GET",
            success: function (data) {
                $.each(data, function (i, item) {
                    var str = '<option value="' + item.id + '">' + item.name + '</option>';
                    $('#academic').append(str);
                });
            }
        });
