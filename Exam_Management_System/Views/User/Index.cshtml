                $('#student_city').html('  <input type="text" class="form-control" name="City" />');
            }
        })
        $('#moth_city').change(function () {
            if ($('#moth_city').val() == 'other') {
                $('#mother_city').html('  <input type="text" class="form-control" name="City" />');
            }
        })
        $('#fath_city').change(function () {
            if ($('#fath_city').val() == 'other') {
                $('#father_city').html('  <input type="text" class="form-control" name="City" />');
