
@{
    ViewData["Title"] = "Academic";
}
@model IEnumerable<Exam_Management_System.Models.AcademicYear>;
<section class="content-header bg-gray" style="padding-top:10px">
    <h1 style="padding-top:10px;padding-bottom:20px">
        Academic Year
        <small>Data</small>
    </h1>
</section>
<!-- Main content -->
<section class="content container-fluid">
    <div class="row">
        <div class="col-md-4">
            <div class="panel">
                <div class="panel-heading">
                    <i class="fa fa-plus-square fa-2x"></i><span style="font-size:25px"> Add Academic Year</span>
                </div>
                <div class="panel-body">
                    <form asp-controller="AcademicYear" asp-action="AddAcademic" method="post">
                        <div class="form-group">
                            <label>Academic Year</label>
                            <input type="text" class="form-control" name="Name" />
                        </div>
                        <div class="form-group text-center">
                            <button type="submit" class="btn btn-primary">Save <i class="fa fa-arrow-circle-right"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
        <div class="col-md-8">
            <div class="panel">
                <div class="panel-heading">
                    <div class="row">
                        <div class="col-xs-6 col-xs-offset-3">
                            <input type="text" class="form-control" id="search" placeholder="Search.........." />
                        </div>
                    </div>
                </div>
                <div class="panel-body table-responsive">
                    <table class="table table-hover">
                        <thead class="bg-gray">
                            <tr>
                                <th>Id</th>
                                <th>Academic Year</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var academic in Model)
                            {
                                <tr>
                                    <td>@academic.Id</td>
                                    <td>@academic.Name</td>
                                    <td>
                                        <a class="btn btn-primary" asp-controller="AcademicYear" asp-action="EditAcademic" asp-route-id="@academic.Id"><i class="fa fa-edit"></i></a>
                                        <a class="btn btn-danger" asp-controller="AcademicYear" asp-action="RemoveAcademic" asp-route-id="@academic.Id"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                        </table>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts{
