
@{
    ViewData["Title"] = "Student";
}
@model IEnumerable<Exam_Management_System.Models.Student>
<style>
    .row #accordion .panel .panel-body li:hover {
        background-color: Highlight;
        color: white;
    }
</style>

<section class="content-header bg-gray" style="padding-top:0px">
    <div class="row">
        <div class="col-sm-4">
            <h1 style="">
                Students
                <small>@ViewData["year"]</small>
            </h1>
        </div>
        <div class="col-sm-8">
            <div class="row" style="padding-top:15px;padding-bottom:5px">
                <div class="col-md-6 col-md-offset-3">
                    <input type="text" class="form-control" id="search" placeholder="Search.........." />
                </div>
            </div>
        </div>
    </div>

</section>
